{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "indigo-debug",
            "hidden": false,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "BUILD_INDIGO": "ON",
                "BUILD_INDIGO_WRAPPERS": "ON",
                "BUILD_INDIGO_UTILS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "indigo-debug",
            "configurePreset": "indigo-debug",
            "targets": [
                "all"
            ]
        }
    ]
}
